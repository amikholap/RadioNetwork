<Window x:Class="RadioNetwork.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Closing="OnWindowClosing"
        Title="Радиосеть" Height="200" Width="200">
    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="5" >
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="3*" MinHeight="150" />
            <RowDefinition Height="5*" />
            <RowDefinition Height="2*" />
        </Grid.RowDefinitions>

        <Grid Grid.Column="0" Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="3*" />
                <RowDefinition Height="3*" />
                <RowDefinition Height="3*" />
                <RowDefinition Height="4*" />
                <RowDefinition Height="4*" />
            </Grid.RowDefinitions>
            <Label Grid.Column="0" Grid.Row="0" HorizontalAlignment="Left">Позывной</Label>
            <TextBox Name="CallsignInput" Grid.Column="1" Grid.Row="0" HorizontalAlignment="Stretch">
                <TextBox.Text>
                    <Binding Path="Callsign" Mode="TwoWay">
                        <Binding.ValidationRules>
                            <ExceptionValidationRule />
                        </Binding.ValidationRules>
                    </Binding>
                </TextBox.Text>
            </TextBox>
            <Label Grid.Column="0" Grid.Row="1">Ч. пр.</Label>
            <TextBox Name="FrInput" Grid.Column="1" Grid.Row="1">
                <TextBox.Text>
                    <Binding Path="Fr" Mode="TwoWay">
                        <Binding.ValidationRules>
                            <ExceptionValidationRule />
                        </Binding.ValidationRules>
                    </Binding>
                </TextBox.Text>
            </TextBox>
            <Label Grid.Column="0" Grid.Row="2">Ч. пер.</Label>
            <TextBox Name="FtInput" Grid.Column="1" Grid.Row="2">
                <TextBox.Text>
                    <Binding Path="Ft" Mode="TwoWay">
                        <Binding.ValidationRules>
                            <ExceptionValidationRule />
                        </Binding.ValidationRules>
                    </Binding>
                </TextBox.Text>
            </TextBox>
            <Button Name="RefreshButton" Grid.ColumnSpan="2" Grid.Row="3" Margin="25,5,25,0" Click="RefreshButton_Click" >Подключиться</Button>
            <Button Name="DisconnectButton" Grid.ColumnSpan="2" Grid.Row="4" Margin="25,5,25,0" Click="DisconnectButton_Click">Отключиться</Button>
        </Grid>
    </Grid>
</Window>